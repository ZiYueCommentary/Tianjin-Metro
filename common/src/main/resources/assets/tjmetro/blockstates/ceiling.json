{
    "multipart": [
        {
            "when": {
                "facing": "false"
            },
            "apply": {
                "model": "tjmetro:block/ceiling"
            }
        },
        {
            "when": {
                "facing": "true"
            },
            "apply": {
                "model": "tjmetro:block/ceiling",
                "y": 90
            }
        },
        {
            "when": {
                "light": "true",
                "facing": "false"
            },
            "apply": {
                "model": "tjmetro:block/ceiling_light"
            }
        },
        {
            "when": {
                "light": "true",
                "facing": "true"
            },
            "apply": {
                "model": "tjmetro:block/ceiling_light",
                "y": 90
            }
        }
    ]
}