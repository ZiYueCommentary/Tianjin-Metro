{
	"multipart": [
		{
			"when": {
				"facing": "false",
				"bottom": "false"
			},
			"apply": {
				"model": "tjmetro:block/rolling"
			}
		},
		{
			"when": {
				"facing": "true",
				"bottom": "false"
			},
			"apply": {
				"model": "tjmetro:block/rolling",
				"y": 90
			}
		},
		{
			"when": {
				"facing": "false",
				"bottom": "true"
			},
			"apply": {
				"model": "tjmetro:block/rolling_bottom"
			}
		},
		{
			"when": {
				"facing": "true",
				"bottom": "true"
			},
			"apply": {
				"model": "tjmetro:block/rolling_bottom",
				"y": 90
			}
		}
    ]
}